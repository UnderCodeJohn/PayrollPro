<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.payrollpro.payrollpro.controller.AddEmployeeController">
   <children>
      <VBox fx:id="containerPane" alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="750.0">
         <children>
            <VBox fx:id="addEmployeePane" fillWidth="false" prefHeight="490.0" prefWidth="615.0" spacing="10.0">
               <children>
                   <Label text="Add Employee">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox spacing="20.0">
                     <children>
                        <VBox spacing="28.0">
                           <children>
                              <Label fx:id="employeeIdLabel" text="Employee ID">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="nameLabel" text="Name">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="addressLabel" text="Address">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="postalLabel" text="Postal Code">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="emailLabel" text="Email">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="jobTitleLabel" text="Job Title">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="usernameLabel" text="Username">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label fx:id="passwordLabel" text="Password">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox spacing="20.0">
                           <children>
                              <TextField fx:id="employeeIdField" disable="true" promptText="ID" />
                               <TextField fx:id="employeeNameField" promptText="Employee Name" />
                               <TextField fx:id="addressField" promptText="Address" />
                               <TextField fx:id="postalCodeField" promptText="Postal Code" />
                               <TextField fx:id="emailField" promptText="Email" />
                               <TextField fx:id="jobTitleField" promptText="Job Title" />
                               <TextField fx:id="usernameField" promptText="Username" />
                              <TextField fx:id="passwordField" promptText="Password" />
                           </children>
                        </VBox>
                        <VBox spacing="28.0">
                           <children>
                              <Label fx:id="nameError" text="error" textFill="RED">
                                 <VBox.margin>
                                    <Insets top="49.0" />
                                 </VBox.margin>
                              </Label>
                              <Label fx:id="addressError" text="error" textFill="RED" />
                              <Label fx:id="postalError" text="error" textFill="RED" />
                              <Label fx:id="emailError" text="error" textFill="RED" />
                              <Label fx:id="jobTitleError" text="error" textFill="RED" />
                              <Label fx:id="usernameError" text="error" textFill="RED" />
                              <Label fx:id="passwordError" text="error" textFill="RED" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="25.0" prefWidth="238.0" spacing="20.0">
                     <children>
                     
                            <Button onAction="#addEmployee" text="Add" />
                        <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
