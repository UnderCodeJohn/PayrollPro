<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.payrollpro.payrollpro.LoginController">
    <children>
      <VBox fx:id="containerPane" alignment="CENTER" fillWidth="false" prefHeight="500.0" prefWidth="500.0">
         <children>
            <VBox fx:id="loginPane" alignment="CENTER" fillWidth="false" prefHeight="386.0" prefWidth="331.0">
               <children>
                  <PasswordField fx:id="passwordField" promptText="Password">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <TextField fx:id="usernameField" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLogin" text="Login" />
               </children>
            </VBox>
         </children>
      </VBox>
    </children>
</AnchorPane>
